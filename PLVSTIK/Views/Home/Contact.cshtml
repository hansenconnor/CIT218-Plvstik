
@{
    /**/

    ViewBag.Title = "Contact Us";
    ViewBag.HasFeaturedImage = true;
    ViewBag.FeaturedImageUrl = "https://images.unsplash.com/photo-1498387727476-b30055b2ef21?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80";
}

@{ 
    var formConfirmationMessage = "";
    var name = "";
    var email = "";
    if (IsPost)
    {
        // Form submitted so display the success message on the same page (previously, the ContactFormSuccess view was rendered)
        name    = Request["name"];
        email   = Request["email"];

        formConfirmationMessage = "Thank you, " + name + "! We've received your message and will reply back to the email you provided: " + email;
    }
}

@*Create a view that accepts data from a form and displays something in that same view when the form posts 
    (you will need to use razor code in the view similar to the GrossPayCalculator example; however, you 
    don't have to post the result of a calculation.) If this is a new view, you will need to add an action method to a controller*@

<section>
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <h1>
                    How Can We Help?
                </h1>
                <p class="lead">Fill out the contact form and let us know how we can assist.</p>
                <p>We typically reply in 24 hours or less!</p>
            </div>
            <div class="col-12 col-lg-4">
                @if (!IsPost)
                {
                    @*Begin contact form*@
                <form name="contactForm" method="post">
                    <fieldset>
                        <div class="form-group">
                            <label for="inputName">Name</label>
                            <input type="text" name="name" class="form-control" id="inputName" placeholder="Enter your name" required />
                        </div>
                        <div class="form-group">
                            <label for="inputEmail">Email address</label>
                            <input type="email" name="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email" required>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="inputMessage">Message</label>
                            <textarea type="" name="message" class="form-control" id="inputMessage" aria-describedby="messageHelp" placeholder="Hey!!!" required></textarea>
                            <small id="messageHelp" class="form-text text-muted">Send us a message!</small>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </fieldset>
                </form>
                @*End form*@
                } else { <p class="lead">Thank you, <strong class="text-primary">@name!</strong></p><p>We've received your message and will reply back to the email you provided: <strong class="text-primary">@email</strong></p> }
                
            </div>
        </div>
    </div>
</section>